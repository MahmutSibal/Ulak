# FastAPI settings
APP_NAME=ulak-backend
ENV=dev
API_PREFIX=/api

# Security
JWT_SECRET=change-me-in-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Login protection
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_MINUTES=15

# IP filtering (comma-separated)
# Leave empty to disable.
IP_ALLOWLIST=
IP_BLOCKLIST=

# SQL Server Integrated Security (Windows auth)
# Kaynak string (SSMS):
# Data Source=DESKTOP-DS4K5IB;Integrated Security=True;Persist Security Info=False;Pooling=False;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Application Name="SQL Server Management Studio";Command Timeout=0
# SQLAlchemy URL formatÄ±:
DATABASE_URL=mssql+pyodbc://@DESKTOP-DS4K5IB/ulak?driver=ODBC+Driver+18+for+SQL+Server&trusted_connection=yes&Encrypt=yes&TrustServerCertificate=yes

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
